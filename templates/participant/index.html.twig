{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}
{% block header %}
<br>
<br>
<br>
<br>
 <h1>Participant index</h1>
 
    <form class="form-inline my-2 my-lg-0" action="{{ path('app_participant_index') }}">
        <input class="form-control mr-sm-2" type="search" placeholder="Recherche" aria-label="Recherche" name="q" value="{{ q }}">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
    </form>

    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_part</th>
                <th>Nom</th>
                <th>Name_event</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
         <a href="{{ path('app_participant_new') }}">Create new</a>
        <tbody>
        {% for participan in participant %}
            <tr>
                <td>{{ participan.id }}</td>
                <td>{{ participan.idPart }}</td>
                <td>{{ participan.nom }}</td>
                <td>{{ participan.nameEvent }}</td>
                <td>{{ participan.prenom }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participan.id}) }}">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participan.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

      {% if participant|length > 0 %}
    <ul class="pagination justify-content-center">
        {% for page in participant.page %}
            <li {% if page.isCurrentPage %}class="active"{% endif %}>
                <a href="{{ path('app_participant_index', {'page': page.number}) }}">{{ page.number }}</a>
            </li>
        {% endfor %}
    </ul>
   
    {{ knp_pagination_render(participant) }}
    {% endif %}
    <a class="btn btn-primary" href="{{ path('app_participant_new') }}">Create new</a>

{% endblock %}



