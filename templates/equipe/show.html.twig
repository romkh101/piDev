{% extends "base.html.twig" %}
{% block body %}

    <h1>Equipes</h1>

    <table class="table">
        <tbody>
         {% for Equipe in Equipe %}
            <tr>
                <th>Id</th>
                <td>{{ Equipe.id }}</td>
            </tr>
             <tr>
                <th>Nom</th>
                <td>{{ Equipe.Nom }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ Equipe.Pays }}</td>
            </tr>
            <tr>
                <th>Ligue</th>
                <td>{{ Equipe.Ligue }}</td>
            </tr>
             <tr>
                <th>Logo</th>
                <td><img src="/uploads/{{ Equipe.Logo }}" style="max-height: 200px; max-width: 200px;"></td>
                
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}">back to list</a>
    
{% endblock %}