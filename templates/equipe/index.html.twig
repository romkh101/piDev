
{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
<br>
<br>
<center><a href="{{ path('app_Equipe_new') }}">Create new</a></center>
<br>
<div class="container">
<div class="card" style="width: 18rem;">
    {% for Equipe in Equipe %}
    <img class="card-img-top" src="/uploads/{{ Equipe.Logo }}" style="max-height: 200px; max-width: 200px;">
    <div class="card-body">
      <h5 class="card-title">{{ Equipe.Nom }}</h5>
      <p class="card-text"> {{ Equipe.Pays }}</p>
      <p class="card-text"> {{ Equipe.Ligue }}</p>
      {{ include('Equipe/_delete_form.html.twig') }}
      <a href="{{ path('app_Equipe_edit', {'id': Equipe.id}) }}" class="btn btn-primary">edit</a>
    </div>
    {% endfor %}
  </div>
</div>
  

 
    
{% endblock %}